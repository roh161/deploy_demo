<%# <%= render 'forms/vehicles_details'%>

<% if user_signed_in? %>
	<h2> </h2>
	<br> <br>
	<h2>Welcome <%= current_user.name %> <%= link_to "Park Your Car Here", new_after_user_signin_path(@vehicle),class: "btn btn-sm btn-info text-dark"%></h2>
	<table class="table table-striped table-hover">
			<tr class="header bg-dark text-light">
				<th>Car Plate Number</th>
				<th>Car Model Name</th>
				<th>Action</th>
			</tr>
				
				
			<% current_user.vehicles.each do |v| %>
				<tr>
					<td><%= v.number%></td>
					<td><%= v.car_model_name%></td>
					<td>
						<%= link_to "See Details", after_user_signin_path(v.id), class: "btn btn-sm btn-success text-light" %>
						<%= link_to "Update Car Details", edit_after_user_signin_path(v.id), class: "btn btn-sm btn-primary text-light" %>
						<%= link_to "Exit", after_user_signin_path(v.id), class: "btn btn-sm btn-danger text-light", data: {
					turbo_method: :delete,
					turbo_confirm: "Are you sure?"}%>
					</td>
				</tr>
			<% end %>
	</table>
<% else %>
	<%= render "shared/header" %>
	<h2>Welcome to Our 24*7 Service</h2>
	<h4 class= "text-success">Thanks for Choosing Us</h4>
<% end %>